<h2 class="fs-4 p-3 border border-1 container mt-5 p-2 bio">Change your password</h2>

<div class="fs-4 p-3 border border-1 container mt-5 p-2 bio">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "New password", class: "form-control mb-4" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm new password", class: "form-control mb-4" %>
    </div>

    <div class="actions">
      <%= f.submit "Change my password", data: {disable_with: "Editing..."}, class: "btn btn-primary my-3" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
